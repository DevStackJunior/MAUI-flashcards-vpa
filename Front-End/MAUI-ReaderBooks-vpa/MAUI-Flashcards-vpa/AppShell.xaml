<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MAUI_Flashcards_vpa.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MAUI_Flashcards_vpa"
    xmlns:pages="clr-namespace:MAUI_Flashcards_vpa.Pages"
    Shell.FlyoutBehavior="Disabled"
    Title="MAUI_Flashcards_vpa">

    <ShellContent
      Title="Home"
      ContentTemplate="{DataTemplate local:MainPage}"
      Route="home"
       Shell.NavBarIsVisible="False"/>

    <ShellContent
      Title="Tags"
      ContentTemplate="{DataTemplate pages:Tags}"
      Route="tags"
       Shell.NavBarIsVisible="False"/>

    <ShellContent
      Title="AddTag"
      ContentTemplate="{DataTemplate pages:AddTag}"
      Route="add-tag"
      Shell.NavBarIsVisible="False"/>
    
    
</Shell>
            <VerticalStackLayout Grid.Column="0" Spacing="4" HorizontalOptions="Center">
                <Label Text="{fluent:Fluent Icon=Home28}"
                       FontSize="24"
                       TextColor="{StaticResource Purple1}"
                       HorizontalTextAlignment="Center"/>
                <Label Text="Home" FontSize="10" TextColor="{StaticResource Purple1}"/>
            </VerticalStackLayout>

            <VerticalStackLayout Grid.Column="1" Spacing="4" HorizontalOptions="Center">
                <Label Text="{fluent:Fluent Icon=Tag32}"
                       FontSize="24"
                       TextColor="#9CA3AF"
                       HorizontalTextAlignment="Center"/>
                <Label Text="Tags" FontSize="10" TextColor="#9CA3AF"/>
            </VerticalStackLayout>

            <VerticalStackLayout Grid.Column="2" Spacing="4" HorizontalOptions="Center">
                <Label Text="{fluent:Fluent Icon=Add24}"
             FontSize="24"
             TextColor="#9CA3AF"
             HorizontalTextAlignment="Center"/>
                <Label Text="Add Tag" FontSize="10" TextColor="#9CA3AF"/>
            </VerticalStackLayout>
            

